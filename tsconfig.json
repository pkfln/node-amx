{
    "compilerOptions": {
      "outDir": "lib/cjs",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6"],
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "exclude": [
      "node_modules",
      "lib",
      "dist"
    ]
  }
  